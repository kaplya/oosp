.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner
    .container
      = link_to "Oospey", root_path, :class => 'brand'
      %ul.nav
        - if current_user
          %li= link_to current_user.email, current_user
          %li= link_to 'Sign out', sign_out_path
        - else
          %li= link_to 'Learn more', 'learn'
          %li= link_to 'Comunity', 'comunity'
          %li= link_to 'Sign up', sign_up_path
          %li= link_to 'Sign in', sign_in_path

